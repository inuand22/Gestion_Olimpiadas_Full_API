@model DTO.AltaDisciplinaDTO

@{
    ViewData["Title"] = "Eliminar Disciplina";
}

<h1>Eliminar Disciplina</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<h3>¿Está seguro de que desea eliminar esta disciplina?</h3>
<div>
    <h4>Detalles de la Disciplina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDisciplina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDisciplina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnioDisciplina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnioDisciplina)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdDisciplina" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
